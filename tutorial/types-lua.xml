<types xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="/Applications/rti_connext_dds-5.2.0/bin/../resource/app/app_support/rtiddsgen/schema/rti_dds_topic_types.xsd">
<module name="LuaTypes">
  <forward_dcl name="Pair" kind="struct"/>
  <forward_dcl name="Value" kind="union"/>
  <forward_dcl name="Kind" kind="enum"/>
  <typedef name="Table" sequenceMaxLength="-1" type="nonBasic"  nonBasicTypeName= "LuaTypes::Pair"/>
  <enum name="Kind">
    <enumerator name="NIL"/>
    <enumerator name="BOOLEAN"/>
    <enumerator name="NUMBER"/>
    <enumerator name="STRING"/>
    <enumerator name="TABLE"/>
  </enum> 
  <union name="Value">
<discriminator type="nonBasic" nonBasicTypeName="LuaTypes::Kind"/>
<case>
    <caseDiscriminator value="(LuaTypes::NIL)"/>
<caseDiscriminator value="(LuaTypes::BOOLEAN)"/>
<member name="b" id="1" type="boolean"/>
</case>
<case>
    <caseDiscriminator value="(LuaTypes::NUMBER)"/>
<member name="n" id="2" type="double"/>
</case>
<case>
    <caseDiscriminator value="(LuaTypes::STRING)"/>
<member name="s" id="3" type="double"/>
</case>
<case>
    <caseDiscriminator value="(LuaTypes::TABLE)"/>
<member name="t" id="4" type="nonBasic"  nonBasicTypeName= "LuaTypes::Table"/>
</case>
  </union>
  <struct name= "Pair">
    <member name="name" id="0" type="string"/>
    <member name="value" id="1" type="nonBasic"  nonBasicTypeName= "LuaTypes::Value"/>
  </struct>
</module>
<module name="Demo">
  <const name="MAX_COLOR_LEN" type="long" value="128"/>
  <struct name= "ShapeType">
    <member name="x" id="0" type="long"/>
    <member name="y" id="1" type="long"/>
    <member name="shapesize" id="2" type="long"/>
    <member name="color" stringMaxLength="Test::MAX_COLOR_LEN" id="3" type="string" key="true"/>
    <member name="properties" id="4" type="nonBasic"  nonBasicTypeName= "LuaTypes::Table"/>
  </struct>
</module>
</types>
